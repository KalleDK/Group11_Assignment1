        <TextBox Name="AmountTextBox" HorizontalAlignment="Left" Height="23" Margin="101,66,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="202"/>
        <Button Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="101,107,0,0" VerticalAlignment="Top" Width="85" Click="Button_Click"/>
        <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="218,107,0,0" VerticalAlignment="Top" Width="85"/>

    </Grid>
</Window>
