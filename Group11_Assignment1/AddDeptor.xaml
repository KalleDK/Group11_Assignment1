<Window x:Class="Group11_Assignment1.AddDepter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group11_Assignment1"
        mc:Ignorable="d"
        Title="Add Deptor" Height="200" Width="375">
    <Grid>
        <Label Name="LabelName" Content="Name" HorizontalAlignment="Left" Margin="26,33,0,0" VerticalAlignment="Top" Width="83"/>
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" Height="23" Margin="101,33,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="202" TextChanged="TextBox_TextChanged"/>
